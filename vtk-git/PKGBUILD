package() {
  cd "${srcdir}/vtk/cmake-build-release"
  make DESTDIR="$pkgdir" install
  # Pack license
  install -D -m644 $srcdir/vtk/Copyright.txt $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
