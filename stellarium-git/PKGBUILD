pkgname=stellarium-git
_pkgname=stellarium
pkgver=1.2.r22432.3364be7797
pkgrel=1
_pkgver=1.2
pkgdesc="Software which renders realistic skies in real time with OpenGL"
arch=(x86_64)
url="https://stellarium.org"
license=(GPL2)
conflicts=('stellarium' 'stellarium-bin')
provides=('stellarium')
depends=('libpng' 'libglvnd' 'freetype2' 'openssl' 'gpsd' 'calcmysky' 'libindi' 'qt6-charts' 'qt6-serialport' 'qt6-multimedia' 'qt6-positioning' 'qt6-webengine') # 'qxlsx'
makedepends=('cmake' 'ninja' 'mesa' 'qt6-tools')
source=('git+https://github.com/Stellarium/stellarium' 'remove-overrides-on-virtual-INDIBase.patch')
md5sums=('SKIP' 'SKIP')
sha256sums=('SKIP' 'SKIP')
pkgver() {
  cd ${srcdir}/${_pkgname}
  printf "${_pkgver}.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd ${srcdir}/${_pkgname}
  
  patch -Np0 -i ${srcdir}/remove-overrides-on-virtual-INDIBase.patch
  
  mkdir -p cmake-build-release && cd cmake-build-release

  cmake .. \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_BUILD_SHARED_LIBS=ON \
    -DCMAKE_CXX_STANDARD=17 \
    -DCMAKE_C_EXTENSIONS=OFF \
    -DCMAKE_C_STANDARD=11 \
    -DENABLE_QT6=ON \
    -DENABLE_SHOWMYSKY=ON \
    -DENABLE_TESTING=OFF \
    -DENABLE_XLSX=OFF \
    -Wno-dev
  make -j14
}

package() {
  cd ${srcdir}/${_pkgname}/cmake-build-release
  make DESTDIR="$pkgdir" install
}
